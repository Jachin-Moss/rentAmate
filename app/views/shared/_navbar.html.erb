<header>
  <div class="container-logo">
    <%= link_to root_path, class: "navbar-logo" do %>
      <%= image_tag "logo.png" %>
    <% end %>
  </div>
  <div class="header-btn">
    <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, class: "avatar", alt: "user avatar" %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "avatar", alt: "default avatar" %>
          <% end %>
        </a>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", user_dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
        </div>
      </li>
    <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "signup" %>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</header>
